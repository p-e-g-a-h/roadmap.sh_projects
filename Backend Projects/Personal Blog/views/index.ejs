<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Home</title>
  </head>
  <body class="w-1/2 m-auto mt-20 border border-zinc-800 p-5">
    <header><h1 class="text-6xl text-center">Personal Blog</h1></header>
    <main class="flex flex-col gap-5 mt-20">
    <% articles.forEach(item => { %>
      <a href="/article/<%= item.id %>" %>>
        <section class="flex flex-row items-center justify-between border-t-2 pt-2">
          <h2 class="text-3xl"><%= item.title %></h2>
          <p class="text-2xl"><%= item.date %></p>
        </section>
      </a>
    <% }) %>
    </main>
  </body>
</html>
